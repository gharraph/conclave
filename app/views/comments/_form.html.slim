= simple_form_for [@conversation, @comment], :html => {:class => 'form-horizontal', :multipart => true } do |f|
  = f.error_notification
  .form-inputs
    = f.input :content, :required => true, :autofocus => true, :label => "Body", :input_html => {:class => "span9"}
	= f.file_field :photo
  .form-actions
    = f.button :submit, "Submit Comment", :class => "btn btn-primary"